@model VacationManager.Models.ViewModel.TimeOffs.AllRequestsVM
@{
    ViewData["Title"] = "AllRequests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AllRequests</h1>


<style>
    .table {
        border-collapse: collapse;
        margin-top;
        border: ridge;
    }

        .table thead {
            background-color: lightskyblue;
        }
</style>
<table class="table">
    <thead>
        <tr>
            <th>Last edit</th>
            <th>From</th>
            <th>To</th>
            <th>Approved</th>
            <th>Half day</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PaidTimeOffs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @item.IsApproved
                </td>
                <td>
                    @item.IsHalfDay
                </td>
                <td>
                    <a asp-action="ApprovePaid" asp-route-id="@item.Id">Approve</a> |
                    <a asp-action="DeletePaid" asp-route-id="@item.Id">Delete</a>
                </td>
                <td></td>

            </tr>
        }
    </tbody>
</table>
<br>
<br>

