@model Data.Entity.TimeOffs.PaidTimeOff

@{
    ViewData["Title"] = "EditPaid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>PaidTimeOff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPaid" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "date" } })
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "date" } })
                <span asp-validation-for="EndDate" class="text-danger"></span>
            
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsHalfDay" /> @Html.DisplayNameFor(model => model.IsHalfDay)
                    </label>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

